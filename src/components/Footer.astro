---
import concertsIcon from "@assets/images/tabs/concert.png";
import albumsIcon from "@assets/images/tabs/disc.png";
import newsIcon from "@assets/images/tabs/news.png";
import tvIcon from "@assets/images/tabs/video.png";
import interviewsIcon from "@assets/images/tabs/mic.png";
---

<div class="container mx-auto text-center border-t-4 border-black">
  <ul class="flex mx-auto pt-3 pb-8 justify-around md:justify-center">
    <li>
      <a href="/" data-astro-prefetch>
        <span class="hidden md:block m-3">Conciertos</span>
        <img
          class="size-6 block mx-4 md:hidden"
          src={concertsIcon.src}
          alt="Conciertos"
        />
      </a>
    </li>
    <li>
      <a href="/discos" data-astro-prefetch>
        <span class="hidden md:block m-3">Discos</span>
        <img
          class="size-6 block mx-4 md:hidden"
          src={albumsIcon.src}
          alt="Discos"
        />
      </a>
    </li>
    <li>
      <a href="/" data-astro-prefetch>
        <span class="hidden md:block m-3">Noticias</span>
        <img
          class="size-6 block mx-4 md:hidden"
          src={newsIcon.src}
          alt="Noticias"
        />
      </a>
    </li>
    <li>
      <a href="/" data-astro-prefetch>
        <span class="hidden md:block m-3">Entrevistas</span>
        <img
          class="size-6 block mx-4 md:hidden"
          src={interviewsIcon.src}
          alt="Entrevistas"
        />
      </a>
    </li>
    <li>
      <a href="/" data-astro-prefetch>
        <span class="hidden md:block m-3">BiginnerTV</span>
        <img
          class="size-6 block mx-4 md:hidden"
          src={tvIcon.src}
          alt="BiginnerTV"
        />
      </a>
    </li>
  </ul>
</div>
